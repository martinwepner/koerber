{
	"compilerOptions": {
		"lib": ["esnext"],
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitReturns": true,
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"sourceMap": true,
		"noUnusedLocals": true,
		"resolveJsonModule": false,
		"esModuleInterop": true,
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": "src",
		"preserveConstEnums": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"strictNullChecks": true
	},
	"include": ["src"],
	"compileOnSave": true
}
